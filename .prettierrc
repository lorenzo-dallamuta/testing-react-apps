{
  "plugins": ["@trivago/prettier-plugin-sort-imports"],

  "printWidth": 80,
  "trailingComma": "all",
  "singleQuote": true,
  "tabWidth": 2,
  "semi": false,
  "jsxSingleQuote": false,
  "quoteProps": "as-needed",
  "bracketSpacing": true,
  "jsxBracketSameLine": false,
  "arrowParens": "avoid",

  "importOrder": ["^[a-zA-Z](.*)$", "^@(.*)/(.*)$", "[./]"],
  "importOrderSeparation": false,
  "importOrderSortSpecifiers": true
}
